<h1><%= @school.name %> Dashboard</h1>

<p>Welcome <%= @admin.first_name %>!</p>

<% if flash[:errors] %>
	<% flash[:errors].each do |error| %>
		<p><%= error %></p>
	<% end %>
<% end %>

<%= simple_form_for @newsfeed, url: dashboards_path do |f| %>
	<%= f.input :title, required: false %>
	<%= f.input :content, required: false %>
	<%= f.button :submit, 'Publish' %>
<% end %>

<% if @newsfeeds %>
	<% @newsfeeds.each do |n| %>
		<a href="/dashboards/<%= n.id %>"><h2><%= n.title %></h2></a>
		<p><%=raw n.content %></p>
		<% @time = n.created_at.localtime %>
		<p><%= @time.strftime('%B %d, %Y - %I:%M %p') %></p>
	<% end %>
<% end %>	

<h2>Current School Site</h2>
<iframe id='iframe' src='/schools/<%= @school.id %>' />

