<h1>Dashboards#edit</h1>

<% if flash[:errors] %>
	<% flash[:errors].each do |error| %>
		<p><%= error %></p>
	<% end %>
<% end %>

<%= simple_form_for @newsfeed, url: dashboard_path do |f| %>
	<%= f.input :content, required: false %>
	<%= f.button :submit, 'Update' %>
<% end %>

<%= button_to('Delete', dashboard_path, method: :delete) %>

